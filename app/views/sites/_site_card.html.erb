<a data-toggle="modal" data-target="#siteModal-<%= site.title.gsub(/\s+/, "") %>">
  <div class="card mb-2" style="min-width: 20rem; max-width: 20rem; margin-bottom: 1rem !important;">
    <img src="<%= site.img_url_sm %>" class="card-img-top" alt="<%= site.title %>">
    <div class="card-body">
      <h5 class="card-title"><%= site.title %></h5>
      <p class="card-text"><%= site.desc %></p>
      <p><a href="<%= site.site_url %>" class="btn btn-primary url-button"><%= site.button_text %></a></p>
      <%=
        if isAdmin
          link_to 'Edit Site', site_path(site)
        end 
      %>
    </div>
  </div>
</a>

<div class="modal fade" id="siteModal-<%= site.title.gsub(/\s+/, "") %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= site.button_text %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="<%= site.img_url_lg %>" class="img-fluid">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
